<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="postResult">
  <h2 id="postTitle"></h2>
  <p id="postBody"></p>
</div>

<script type="text/javascript" charset="utf=8">
   $(function () {
    $('form').submit(function(event) {
      event.preventDefault();
      console.log("made it to form submit")
      var values = $(this).serialize();
      console.log(values)
      var posting = $.post('/posts', values);
          //jquery serialize() method 
      console.log("made it to posting")
      posting.done(function(data) {
        // console.log("did I make it to done?");
        //handle response 
        var post = data
        $("#postTitle").text(post["title"]);
        $("#postBody").text(post["description"])
      });
    });
   }); 
  // add an event listender for form, submit 
</script>
